<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Helpshift Light Theme -->
  <style name="HSThemeLight" parent="@android:style/Theme.DeviceDefault.Light.DialogWhenLarge.NoActionBar">

    <!-- Attributes -->
    <item name="hs_sectionHeaderBgStyleRef">@style/hs_lightSectionHeaderBgStyle</item>
    <item name="hs_sectionHeaderTextStyleRef">@style/hs_lightSectionHeaderTextStyle</item>
    <item name="hs_sectionHeaderDividerStyleRef">@style/hs_lightSectionHeaderDividerStyle</item>
    <item name="hs_sectionItemTextStyleRef">@style/hs_lightSectionItemTextStyle</item>
    <item name="hs_sectionItemDividerStyleRef">@style/hs_lightSectionItemDividerStyle</item>
    <item name="hs_sectionFooterTextStyleRef">@style/hs_lightSectionFooterTextStyle</item>
    <item name="hs_searchFooterButtonStyleRef">@style/hs_lightSearchFooterButtonStyle</item>
    <item name="hs_messagesTextStyleRef">@style/hs_lightMessagesTextStyle</item>
    <item name="hs_activityHeaderStyleRef">@style/hs_lightActivityHeaderStyle</item>
    <item name="hs_activityBgStyleRef">@style/hs_lightActivityBgStyle</item>
    <item name="hs_listStyleRef">@style/hs_lightListStyle</item>
    <item name="hs_stubStyleRef">@style/hs_lightStubStyle</item>
    <item name="hs_editBoxStyleRef">@style/hs_lightEditBoxStyle</item>
    <item name="hs_messagesTextColorRef">@color/hs_light_messages_text</item>
    <item name="hs_webviewTextColorRef">@color/hs_light_webview_text</item>
    <item name="hs_webviewBgColorRef">@color/hs_light_webview_bg</item>
    <item name="hs_listSelectorDrawableRef">@drawable/hs_light_list_selector</item>
  </style>

  <style name="hs_lightActivityHeaderStyle">
    <item name="android:background">@color/hs_light_header_background_color</item>
    <item name="android:textColor">@color/hs_light_header_font_color</item>
  </style>

  <style name="hs_lightActivityBgStyle">
    <item name="android:background">@color/hs_light_activity_bg</item>
  </style>

  <style name="hs_lightListStyle">
    <item name="android:background">@color/hs_light_list_bg</item>
  </style>

  <style name="hs_lightStubStyle">
    <item name="android:background">@color/hs_light_horizontal_stub_bg</item>
  </style>

  <style name="hs_lightEditBoxStyle">
    <item name="android:background">@color/hs_light_edit_box_bg</item>
  </style>

  <!-- View Styles -->
  <!-- Section Header -->
  <style name="hs_lightSectionHeaderBgStyle">
    <item name="android:background">@color/hs_light_section_header_bg</item>
  </style>

  <style name="hs_lightSectionHeaderTextStyle">
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/hs_light_section_header_text</item>
    <item name="android:textSize">@dimen/hs_section_header_text_size</item>
    <item name="android:paddingLeft">15dip</item>
    <item name="android:paddingTop">12dip</item>
    <item name="android:paddingRight">15dip</item>
    <item name="android:paddingBottom">6dip</item>
    <item name="android:fontFamily">@string/hs_section_header_text_font</item>
  </style>

  <style name="hs_lightSectionHeaderDividerStyle">
    <item name="android:background">@color/hs_light_section_header_divider</item>
  </style>

  <!-- Section Item -->
  <style name="hs_lightSectionItemTextStyle">
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/hs_light_section_item_text</item>
    <item name="android:textSize">@dimen/hs_section_item_text_size</item>
    <item name="android:paddingLeft">15dip</item>
    <item name="android:paddingTop">12dip</item>
    <item name="android:paddingRight">15dip</item>
    <item name="android:paddingBottom">6dip</item>
    <item name="android:fontFamily">@string/hs_section_item_text_font</item>
  </style>

  <style name="hs_lightSectionItemDividerStyle">
    <item name="android:background">@color/hs_light_section_item_divider</item>
  </style>

  <!-- Section Footer -->
  <style name="hs_lightSectionFooterTextStyle">
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/hs_light_section_footer_text</item>
    <item name="android:textSize">@dimen/hs_section_footer_text_size</item>
    <item name="android:paddingLeft">15dip</item>
    <item name="android:paddingTop">12dip</item>
    <item name="android:paddingRight">15dip</item>
    <item name="android:paddingBottom">6dip</item>
    <item name="android:fontFamily">@string/hs_section_footer_text_font</item>
  </style>

  <style name="hs_lightSearchFooterButtonStyle" parent="@android:style/Widget.Button">
    <item name="android:text">@string/hs_report_issue_btn</item>
  </style>

  <style name="hs_lightMessagesTextStyle">
    <item name="android:fontFamily">@string/hs_section_item_text_font</item>
    <item name="android:textColor">@color/hs_light_section_item_text</item>
  </style>
</resources>
